${voffset -20}${alignr}${font Droid Sans Mono:size=9 style=Regular}${color}${execpi 3600 echo "\n  ";cal |sed '1d' | sed -e 's/'$(echo "\x5f")'/''/g' | sed -e 's/'$(echo "\x08")'/''/g' | tr '\n' 'Z' | sed -e 's/Z/\n     /g' | sed -e 's/Su/     Su/g'}
